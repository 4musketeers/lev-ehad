<% title("צור קשר") %>
<h1 class="page-title">צור קשר</h1>

<div class="row">
  <div class="col-sm-6">
    
    <%= form_tag email_confirmation_path, method: 'post', html: {role: "form"} do %>
    
    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <%= text_field_tag :name, @name, placeholder: "שם", :autofocus => true, class: "form-control" %>  
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <%= text_field_tag :email, @email, placeholder: "כתובת דואר אלקטרוני", class: "form-control" %>  
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <div class="row">
        <div class="col-xs-12">
          <%= text_area_tag :message, @message, placeholder: "הודעה", rows: 10, class: "form-control" %>  
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-12 padded">
        <button class='btn btn-primary'>
          <i class='fa fa-envelope'></i> 
          שלח
        </button>
      </div>
    </div>
    <% end %>
      
  </div>
</div>
